<form id="CreateProductForm" class="form-horizontal">

    <div class="form-group" id="message">
        <div class="col-sm-6 col-sm-offset-4 ">
            <div class="col-sm-12 alert hide"></div>
        </div>
    </div>
	
	<div class="row">
	    <div class="col-sm-12">
	    	<div class="form-group">
		        <label for="name" class="col-sm-2 control-label">Choix du modèle de gamme</label>
		        <div class="col-sm-8">
		             <div class="input-group col-sm-12">
		                <select name="range_id" id="templateRanges" class="form-control">
							<option selected disabled>Sélectionner un modèle</option>
							{{#each this.data.templateRanges}}
							<option value="{{id}}">{{name}}</option>
							{{/each}}
						</select>
		            </div>
		        </div>
	    	</div>
	    </div>

	    <div class="col-sm-10 col-sm-offset-1">
	    	<div class="form-group">
				<div id="rangePanel"></div>
	    	</div>
	    </div>

		<div class="col-sm-4 col-sm-offset-4">
			<div class="form-group">
				<button type="submit" id="saveProject" class="btn btn-primary center-block">Enregistrer</button>
			</div>
		</div>
	</div>

</form>